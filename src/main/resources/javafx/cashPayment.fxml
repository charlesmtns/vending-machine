<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="CENTER" hgap="10.0" nodeOrientation="LEFT_TO_RIGHT" vgap="10.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.morrisonsislandcampus.cadvs.vendingmachine.controller.CashPaymentController">
    <columnConstraints>
        <ColumnConstraints />
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
    </rowConstraints>
    <Button onAction="#onExitButton" text="X" GridPane.columnIndex="1" GridPane.columnSpan="1" GridPane.rowIndex="0" />

    <Text text="Indicate the amount to be paid" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="1">
        <font>
            <Font size="18.0" />
        </font>
    </Text>

    <Text fx:id="vendingTotal" fill="#bcbaba" text="Vending total amount: 0€" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="2" />

    <HBox alignment="CENTER" spacing="8.0" GridPane.columnIndex="0" GridPane.rowIndex="3">
        <Button fx:id="decrease" disable="true" onAction="#onDecrease" prefHeight="36.0" prefWidth="35.0" text="-" />
        <Text fx:id="amount" text="2">
            <font>
                <Font size="19.0" />
            </font>
        </Text>
        <Text text="€">
            <font>
                <Font size="19.0" />
            </font>
        </Text>
        <Button onAction="#onIncrease" prefHeight="34.0" prefWidth="37.0" text="+" />
    </HBox>
    <Button fx:id="payButton" defaultButton="true" disable="true" onAction="#onPay" prefWidth="160.0" text="Pay" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="4">
        <font>
            <Font size="19.0" />
        </font>
    </Button>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</GridPane>
