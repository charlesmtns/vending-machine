<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<GridPane alignment="CENTER" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/17.0.12"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.morrisonsislandcampus.cadvs.vendingmachine.controller.SignInController">

    <Button text="X" GridPane.columnIndex="3" GridPane.rowIndex="0" onAction="#onExitButton"/>

    <Text text="Sign In" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="1">
        <font>
            <Font size="31.0"/>
        </font>
    </Text>

    <Text fill="#b9b1b1" text="Please enter your details" GridPane.columnIndex="0" GridPane.columnSpan="2"
          GridPane.rowIndex="2"/>

    <Label GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="3">Username:</Label>
    <TextField fx:id="userName" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="4"/>

    <Label GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="5">Pin:</Label>
    <PasswordField fx:id="pin" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="6"/>

    <Button defaultButton="true" text="Sign In" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="7"
            onAction="#onSignInButton"/>

    <Text fill="#b9b1b1" text="Don't have an account?" GridPane.columnIndex="0" GridPane.rowIndex="8"/>
    <Hyperlink text="Sign Up" GridPane.columnIndex="1" GridPane.rowIndex="8" onAction="#onSignUpLink"/>

    <columnConstraints>
        <ColumnConstraints/>
        <ColumnConstraints/>
        <ColumnConstraints/>
        <ColumnConstraints/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
    </rowConstraints>
    <padding>
        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0"/>
    </padding>
</GridPane>
