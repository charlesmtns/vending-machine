<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<GridPane alignment="CENTER" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.morrisonsislandcampus.cadvs.vendingmachine.controller.TopUpController">

    <Button onAction="#onExitButton" text="X" GridPane.columnIndex="1" GridPane.columnSpan="1" GridPane.rowIndex="0" />

    <Text text="Top up my balance" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="1">
        <font>
            <Font size="30.0" />
        </font>
    </Text>

    <Text text="Indicate the amount to be credited to your balance" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="2" />

    <HBox alignment="CENTER" spacing="8.0" GridPane.columnIndex="0" GridPane.rowIndex="3">
        <Button fx:id="decrease" disable="true" onAction="#onDecrease" prefHeight="36.0" prefWidth="35.0" text="-" />
        <Text fx:id="amount" text="10">
            <font>
                <Font size="19.0" />
            </font>
        </Text>
        <Text text="â‚¬">
            <font>
                <Font size="19.0" />
            </font>
        </Text>
        <Button onAction="#onIncrease" prefHeight="34.0" prefWidth="37.0" text="+" />
    </HBox>

    <TextField fx:id="cardHolderName" GridPane.columnIndex="0" GridPane.rowIndex="4" promptText="Cardholder name" />

    <TextField fx:id="cardNumber" GridPane.columnIndex="0" GridPane.rowIndex="5" promptText="Card number" />

    <HBox prefHeight="21.0" prefWidth="249.0" spacing="10.0" GridPane.columnIndex="0" GridPane.rowIndex="6">
        <TextField fx:id="cardExpirationDate" promptText="Expiration Date" />
        <TextField fx:id="cardCvv" promptText="CVV" />
    </HBox>

    <Button fx:id="payButton" defaultButton="true" onAction="#onPay" prefWidth="269.0" text="Pay" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="7" />

    <columnConstraints>
        <ColumnConstraints />
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
    </rowConstraints>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

</GridPane>
